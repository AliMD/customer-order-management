{
  "name": "@alwatr/com-pwa",
  "version": "0.0.0",
  "description": "An COM Progressive Web Application",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com> (https://ali.mihandoost.com)",
  "type": "module",
  "license": "MIT",
  "private": true,
  "scripts": {
    "b": "yarn build",
    "cb": "run-s clean build",
    "s": "yarn serve:dev",
    "w": "yarn watch",
    "build": "run-s build:ts build:es",
    "build:ts": "tsc --build --pretty",
    "build:es": "echo 'rollup'",
    "clean": "yarn build:ts --clean && rm -rf dist && find src -name '*.js' -type f -delete && find src -name '*.d.ts' -type f -delete && find src -name '*.map' -type f -delete",
    "serve:dev": "web-dev-server --config dev-server.mjs",
    "serve:dist": "web-dev-server --config dev-server-dist.mjs",
    "watch": "npm-run-all --print-label --parallel watch:* serve:dev",
    "watch:ts": "yarn build:ts --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@alwatr/element": "^0.18.0",
    "@alwatr/fetch": "^0.18.0",
    "@alwatr/icon": "^0.24.1",
    "@alwatr/logger": "^0.18.0",
    "@alwatr/math": "^0.18.0",
    "@alwatr/router": "^0.18.0",
    "@alwatr/signal": "^0.18.0",
    "@ionic/core": "^6.3.3",
    "@webcomponents/webcomponentsjs": "^2.7.0",
    "lit": "^2.4.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@web/dev-server": "^0.1.35",
    "@web/rollup-plugin-copy": "^0.3.0",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-polyfills-loader": "^1.3.1",
    "eslint": "^8.26.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-wc": "^1.3.2",
    "lerna": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rollup": "^3.2.3",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.4.3",
    "rollup-plugin-terser": "^7.0.2",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.8.4"
  }
}
